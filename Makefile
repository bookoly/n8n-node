.PHONY: rebuild-and-logs build dev clean

# Default target
all: rebuild-and-logs

# Rebuild and restart with logs
rebuild-and-logs:
	@echo "ğŸ”„ Stopping containers..."
	docker-compose down
	@echo "ğŸ“¦ Building npm packages..."
	npm run build
	@echo "ğŸš€ Starting containers..."
	docker-compose up -d
	@echo "ğŸ“‹ Following n8n logs..."
	docker-compose logs -f n8n

# Just build without restarting
build:
	@echo "ğŸ“¦ Building npm packages..."
	npm run build

# Development mode
dev:
	@echo "ğŸ”„ Stopping containers..."
	docker-compose down
	@echo "ğŸ“¦ Building npm packages..."
	npm run build
	@echo "ğŸš€ Starting containers in development mode..."
	docker-compose up

# Clean up
clean:
	@echo "ğŸ§¹ Cleaning up..."
	docker-compose down -v
	docker system prune -f
	rm -rf node_modules
	rm -rf dist
